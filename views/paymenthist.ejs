<%- include('./partials/header') %>
    <div class="breadcome-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Payment History for User <%= muser.USERID %></h4>
                        <form class="form-inline" action="/paymenthist" method="post">
                            <label class="sr-only" for="startdate">Start Date</label>
                            <input type="date" class="form-control mb-2 mr-sm-2" id="startdate" name="startdate" placeholder="Start Date" value="<%=st%>">

                            <label class="sr-only" for="enddate">End Date</label>
                            <input type="date" class="form-control mb-2 mr-sm-2" id="enddate"name="enddate" placeholder="End Date" value="<%=et%>">                                  
                          
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </form>
                        <table>
                            <tr>
                                <th>Payment Date</th>
                                <th>USERID</th>
                                <th>Payment Method</th>
                                <th>Amount</th>
                            </tr>
                            <%if(uPay.length != 0){%>
                                <% uPay.forEach(function(payh){ %>
                                    <tr>
                                        <td><%=moment(payh.CREATEDATE).format( 'YYYY-MM-DD hh:mm:ss')%></td>
                                        <td><%=payh.USERID%></td>
                                        <td><%=payh.METHODNAME%></td>
                                        <td><%=payh.AMOUNT%></td>
                                    </tr>
                                <% }) %>   
                            <%}else{%>
                            </table>
                                <h6 class="form-group" >No Record Found, Please select a date range like between 2019-12-01 and 2019-12-29</h6>

                            <% }%> 
                            
                        </table>
                        <div class="custom-pagination">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('./partials/footer') %>