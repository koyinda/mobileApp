<%- include('./partials/header') %>
    <div class="breadcome-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="caption pro-sl-hd">
                                    <span class="caption-subject text-uppercase"><b>Update Contact Details for User <%= muser.USERID %></b></span>
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="container"></div>
                            <div class="row">
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">
                                        <form action="/updateuser?_method=PUT" method="post">
                                            <div class="form-group">
                                                <label for="address">Residential Address</label>
                                                <input type="text" class="form-control" id="address" aria-describedby="Residential Address" name="uADDRESS" value="<%=uDet[0].ADDRESS1%>">
                                            </div>
                                            <div class="form-group">
                                                <label for="mobile">Phone Number</label>
                                                <input type="text" class="form-control" id="mobile" aria-describedby="Phone Number" name="uMOBILE" value="<%=uDet[0].MOBILE%>">
                                            </div>
                                            <div class="form-group">
                                                <label for="address">Email Address</label>
                                                <input type="email" class="form-control" id="email" aria-describedby="Email Address" name="uEmail" value="<%=uDet[0].EMAIL%>">
                                            </div>
                                            <div class="form-group">
                                                <label for="address">Do Not Disturb Option</label>
                                                <input type="text" class="form-control" id="dnd" aria-describedby="Do Not Disturb Option" name="uDND" value="<%=uDet[0].CUSTOMINFO27%>">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('./partials/footer') %>