<%- include('./partials/header') %>
<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Payment Status</h2>
                                    <p>Interswitch Payment into User <%= muser.USERID %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="hpanel">
    <div class="panel-body">
        <%if(pdet.status == true){%>
            <h2 class="text-center" style="color: green;">Transaction Successful</h2>
            <div class="row">
                <div class="form-group col-lg-4">
                    <label><h5>Transaction ID: </h5></label>
                    <label><h4><%=pdet.transactionid%></h4></label>                    
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-4">
                    <label><h5>Transaction Status: </h5></label>
                    <label><h4><%=pdet.error%></h4></label>                    
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-4">
                    <label><h5>Amount: </h5></label>
                    <label><h4><%=pdet.amount%></h4></label>                    
                </div>
            </div>            
            <div class="text-center">
                <a href="/makepayment"><button class="btn btn-success loginbtn">Make Another Payment</button></a>
                <a href="/"><button class="btn btn-success">Go Home</button></a>
            </div>                        
        <%}else{%>
            <h2 class="text-center" style="color: brown;">Transaction Failed</h2>
            <div class="row">
                <div class="form-group col-lg-4">
                    <label><h5>Transaction ID: </h5></label>
                    <label><h4><%=pdet.transactionid%></h4></label>                    
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-4">
                    <label><h5>Transaction Error: </h5></label>
                    <label><h4><%=pdet.error%></h4></label>                    
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-4">
                    <label><h5>Amount: </h5></label>
                    <label><h4><%=pdet.amount%></h4></label>                    
                </div>
            </div>            
            <div class="text-center">
                <a href="/makepayment"><button class="btn btn-success loginbtn">Try Again</button></a>
                <a href="/"><button class="btn btn-default">Cancel</button></a>
            </div>
        <% }%> 
        
    </div>
</div>

<%- include('./partials/footer') %>